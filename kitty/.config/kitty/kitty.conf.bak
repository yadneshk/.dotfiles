# font_family      Victor Mono Medium
# bold_font        Victor Mono Bold
# italic_font      Victor Mono Medium Italic
# bold_italic_font Victor Mono Bold Italic

font_size                   11.0
remember_window_size        yes
initial_window_width        950
initial_window_height       500
cursor_blink_interval       0.5
cursor_stop_blinking_after  0
scrollback_lines            10000
scrollbar_track_opacity     0
scrollbar_gap               1
scrollbar_handle_color      foreground
enable_audio_bell           no
hide_window_decorations     yes
background_opacity          1
dynamic_background_opacity  yes
confirm_os_window_close     0
notify_on_cmd_finish        invisible
copy_on_select              yes
editor nvim

# Animated cursor follows text
cursor_trail                  1
cursor_shape                 beam

#include current-theme.conf
include Catppuccin-Macchiato.conf
# END_KITTY_THEME

# Remove outer padding
window_padding_width 0
window_border_width             0px

# Tab customizations
tab_bar_edge top
tab_bar_style               powerline
tab_powerline_style         slanted
#tab_title_template          {title}{' :{}:'.format(num_windows) if num_windows > 1 else ''}
#tab_bar_style powerline
#tab_powerline_style round
tab_bar_background  none
active_tab_font_style     bold
inactive_tab_font_style normal


# Performance
repaint_delay                   6
input_delay                     1
sync_to_monitor                 no

text_composition_strategy platform


# BEGIN_KITTY_FONTS
font_family      family="Adwaita Mono"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS

